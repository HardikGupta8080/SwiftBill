<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- State when the button is pressed -->
    <item android:state_pressed="true">
        <shape>
            <solid android:color="@android:color/white" /> <!-- White background -->
            <stroke android:width="1dp" android:color="@android:color/darker_gray" /> <!-- Gray border -->
            <corners android:radius="4dp" /> <!-- Optional: Rounded corners -->
        </shape>
    </item>

    <!-- State when the button is focused -->
    <item android:state_focused="true">
        <shape>
            <solid android:color="@android:color/white" />
            <stroke android:width="1dp" android:color="@android:color/darker_gray" />
            <corners android:radius="4dp" />
        </shape>
    </item>

    <!-- Default state -->
    <item>
        <shape>
            <solid android:color="@android:color/white" />
            <stroke android:width="1dp" android:color="@android:color/darker_gray" />
            <corners android:radius="4dp" />
        </shape>
    </item>
</selector>
